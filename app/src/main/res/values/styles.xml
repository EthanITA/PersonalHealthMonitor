<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.App.MaterialDialogAlert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Title -->
        <item name="materialAlertDialogTitleTextStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <!-- Body -->
        <item name="materialAlertDialogBodyTextStyle">?attr/textAppearanceBody2</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
    </style>
    <style name="vertical_divider">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
